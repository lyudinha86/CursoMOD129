@model IEnumerable<TeamMember>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>
                @Html.DisplayNameFor(model => model.Birthday)
            </th>
            <th>@Html.DisplayNameFor(model => model.Address)</th>
            <th>
                @Html.DisplayNameFor(model => model.ZipCode)
            </th>
            <th>@Html.DisplayNameFor(model => model.City)</th>
            <th>
                @Html.DisplayNameFor(model => model.NIF)
            </th>
            <th>@Html.DisplayNameFor(model => model.WorkRoleID)</th>
            <th>@Html.DisplayNameFor(model => model.Specialty)</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        @foreach (TeamMember tm in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => tm.Name)</td>
                <td>@Html.DisplayFor(modelItem => tm.Birthday)</td>
                <td>@Html.DisplayFor(modelItem => tm.Address)</td>
                <td>@Html.DisplayFor(modelItem => tm.ZipCode)</td>
                <td>@Html.DisplayFor(modelItem => tm.City)</td>
                <td>@Html.DisplayFor(modelItem => tm.NIF)</td>
                <td>@Html.DisplayFor(modelItem => tm.WorkRole.Name)</td>
                <td>@Html.DisplayFor(modelItem => tm.Specialty)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@tm.ID">Edit</a>
                    <a asp-action="Delete" asp-route-id="@tm.ID">Delete</a>

                    @if (tm.WorkRoleID == ViewBag.MedicWorkRoleID)
                    {
                        <a asp-controller="Appointments" asp-action="MedicAppointmentsHistory"
                   asp-route-id="@tm.ID">Appointments History</a>

                        <a asp-controller="Appointments" asp-action="MedicAppointmentsScheduled"
                   asp-route-id="@tm.ID">Appointments Scheduled</a>
                    }

                </td>

            </tr>
        }
    </tbody>

</table>